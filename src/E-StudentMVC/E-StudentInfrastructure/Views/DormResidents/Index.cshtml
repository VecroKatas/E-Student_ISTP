@model IEnumerable<E_StudentDomain.Model.DormResident>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.DormNumber == null)
{
    <h1>Мешканці всіх гуртожитків</h1>
}
else
{
    <h1>Мешканці @ViewBag.DormNumber гуртожитку</h1>
}

<p>
    <a asp-action="Create">Створити нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pass.Dorm.Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="OpenAccount" asp-route-id="@item.AccountId">@Html.DisplayFor(modelItem => item.Account.Number)</a>
            </td>
            <td>
                <a asp-action="OpenPass" asp-route-id="@item.PassId">@Html.DisplayFor(modelItem => item.Pass.Number)</a>
            </td>
            <td>
                <a asp-action="OpenDorm" asp-route-id="@item.Pass.DormId">@Html.DisplayFor(modelItem => item.Pass.Dorm.Number)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
