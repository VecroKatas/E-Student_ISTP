            @Html.DisplayNameFor(model => model.Student.Group)
        </dt>
        <dd class="col-sm-2">
            <a asp-action="OpenGroup" asp-route-id="@Model?.Student.GroupId">
                @Html.DisplayFor(model => model.Student.Group.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-2">
            
        </dd>
    </dl>
</div>
