@model IEnumerable<E_StudentDomain.Model.DormPass>

@{
    ViewData["Title"] = "Index";
}

@if (ViewBag.DormNumber == null)
{
    <h1>Перепустки мешканців всіх гуртожитків</h1>
}
else
{
    <h1>Перепустки мешканців @ViewBag.DormNumber гуртожитку</h1>
}

<p>
    <a asp-action="Create">Створити нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Issued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expires)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dorm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Issued)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expires)
            </td>
            <td>
                <a asp-action="OpenDorm" asp-route-id="@item.DormId">@Html.DisplayFor(modelItem => item.Dorm.Number)</a>
            </td>
            <td>
                <a asp-action="OpenRoom" asp-route-id="@item.RoomId">@Html.DisplayFor(modelItem => item.Room.Number)</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
