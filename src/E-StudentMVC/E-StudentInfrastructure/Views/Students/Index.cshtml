@model IEnumerable<E_StudentDomain.Model.Student>

@{
    ViewData["Title"] = "Index";
}
@if (ViewBag.GroupName == null)
{
    <h1>Студенти</h1>
}
else
{
    <h1>Студенти групи @ViewBag.GroupName</h1>
}

<p>
    <a asp-action="Create">Створити нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            @if (ViewBag.GroupName != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
            }
            else
            {
                <td>
                    <a asp-action="OpenGroup" asp-route-id="@item.GroupId">@Html.DisplayFor(modelItem => item.Group.Name)</a> 
                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (ViewBag.GroupName != null)
{
    <a asp-action="BackToGroups">Повернутися до груп</a>
}
